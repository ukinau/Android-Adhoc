<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <ImageButton 
            android:id="@+id/startTetherBtn"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/start_button"
	        android:layout_marginRight="5px"
	         />
        
        <ImageButton 
            android:id="@+id/stopTetherBtn"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/stop_button"
	        android:layout_marginRight="5px"
	         />
        
    </LinearLayout>
   
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:text="IPアドレス設定" 
        android:textColor="#000000"/>
        
    <EditText
        android:id="@+id/ipAddressSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/ipAddressSettingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
       	android:text="Setting" /> 
       	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    <Button
	        android:id="@+id/ifconfig"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="ifconfig" />
	    <Button
	        android:id="@+id/iwconfig"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="iwconfig" />
	    <Button 
	        android:id="@+id/iwlist" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="iwlist" />
	    <Button
	        android:id="@+id/getMacAddress"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="MacAddress" />
    </LinearLayout>
    
    <EditText 
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    
    
</LinearLayout>