<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".DtnActivity"
    android:background="#f0f8ff" >

    <TextView
        android:id="@+id/targetText_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Information"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/target_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="#000000" />
	<EditText 
	    android:id="@+id/target_name"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"/>    
	<TextView
        android:id="@+id/target_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="address:"
        android:textColor="#000000" />
	<EditText 
	    android:id="@+id/target_address"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"/> 
	<TextView
        android:id="@+id/target_facebook_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="facebook:"
        android:textColor="#000000" />
	<EditText 
	    android:id="@+id/target_facebook"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"/> 
	
	
	<Button
	    android:id="@+id/setTargetText"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:layout_marginRight="5px"
	    android:text="set" />
	    
    
    <View android:id="@+id/targetText_label_border"
		   android:layout_width="fill_parent"
		   android:layout_height="2dp"       
		   android:background="#b0c4de"
		   />  
	
    <TextView 
        android:id="@+id/messageList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="受信メッセージ"
        android:textColor="#000000"
        />
	 <ListView
	    android:id="@+id/dtn_message_box_listView"
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/tcpSendButton"
	    android:layout_weight="1"
	    android:background="#000000" >
	</ListView>
    
    
</LinearLayout>